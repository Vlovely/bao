/* pages/mine/mine.wxss */
page{
  background: #dfdfdf;
}
.head{
  background: #fff;
  height: 300rpx;
}
.send{
  height: 200rpx;
  background: #fff;
  margin: 20rpx 0;
}
.sendBox{
  width: 25%;
  text-align: center;
  float: left;
}
.send text{
  font-size: 32rpx;
}
.send image{
  margin-top: 20rpx;
  width: 100rpx;
  height: 100rpx;
}
.about{
  background: #fff;
  margin-bottom: 2rpx;
  height: 60rpx;
  padding: 20rpx 60rpx;
}
.about image{
  width: 70rpx;
  height: 70rpx;
  vertical-align: middle;
}
.about text{
  font-size: 32rpx;
  padding-left: 20rpx;
}
.quit button{
  background: #ff3030;
  border-radius: 10rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  margin-top: 30rpx;
}



.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}


